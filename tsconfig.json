{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true,
    "useBabel": true
  },
  "exclude": [
    "node_modules"
  ]
}
