{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    "max-len"               : [1, 120],
    "indent"                : [1, 2],
    "quotes"                : [1, "single"],
    "func-names"            : [1, "as-needed"],
    "camelcase"             : [0],
    "no-underscore-dangle"  : [0],
    "object-shorthand"      : [0],
    "object-curly-spacing"  : [0],
    "semi"                  : [2, "never"],
    "no-param-reassign"     : ["error", {
      "props": true,
      "ignorePropertyModificationsFor": ["scope", "$scope", "$localStorage"]
    }]
  },
  "globals": {
    "angular": true,
    "window": true,
    "document": true,
    "expect": true
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
